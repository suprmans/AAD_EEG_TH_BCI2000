#ifndef SIGNAL_SHARING_HOOK_H
#define SIGNAL_SHARING_HOOK_H

#include "Uncopyable.h"
#include "GenericFilter.h"
#include "Sockets.h"
#include "WaitableEvent.h"
#include "Thread.h"
#include "MessageChannel.h"
#include "State.h"

#include <queue>

class SignalSharingHook : public GenericFilter::Chain::FilterHook, private Environment, private Uncopyable
{
  protected:
    void OnPublish(GenericFilter*) override;
    void OnDispose(GenericFilter*) override;
    void OnPreflight(GenericFilter*, const SignalProperties& Input, const SignalProperties& Output) override;
    void OnInitialize(GenericFilter*, const SignalProperties& Input, const SignalProperties& Output) override;
    void OnProcess(GenericFilter*, const GenericSignal& Input, GenericSignal& Output) override;
    void OnStartRun(GenericFilter*) override;

  private:
    struct Connection : MessageChannel
    {
        SignalSharingHook* mpParent;

        // A socket for a connection to the client application.
        ClientTCPSocket mSocket;
        // A buffer object to mediate between socket and MessageChannel.-
        UnbufferedIO mBuffer;
        // Parameters to be shared.
        ParamList mParameters;
        // Signals to be shared.
        GenericSignal mSharedSignal, mSharedStates;

        // StateRef objects to connect to states.
        std::vector<StateRef> mStates;
        // An event to notify the sender thread when new signal data is available.
        WaitableEvent mSignalAvailable;

        // Signals and states received from the client side.
        GenericSignal mClientReceivedSignal;
        std::queue<::State> mClientReceivedStates;
        // Whether we received an EndOfData message from the client.
        bool mClientDataAvailable;
        // A mutex to protect data common to main and IO thread.
        std::mutex mClientDataMutex;

        // An object to wrap a call to SenderThreadFunc().
        MemberCall<void(Connection*)> mIOThreadCall;
        // The sender thread.
        Thread mIOThread;

        Connection(SignalSharingHook*);
        ~Connection();
        void Initialize(
            const std::string& address, const SignalProperties& Output,
            const std::vector<StateRef>&, int stateSamples,
            const ParamList&
        );
        void Update(GenericSignal&);
        void ClearInput();
        void IOThreadFunc();

        // MessageChannel overrides
        bool OnVisSignal(std::istream&) override;
        bool OnState(std::istream&) override;
        bool OnSysCommand(std::istream&) override;

    };

    std::map<GenericFilter*, Connection*> mConnections;
};

#endif // SIGNAL_SHARING_HOOK_H
