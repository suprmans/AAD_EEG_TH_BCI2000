#ifndef MAINWINDOW_H
#define MAINWINDOW_H

#include <QList>
#include <QSplitter>
#include <QGroupBox>
#include <QLabel>
#include <QMainWindow>

#include <map>

#include "ModuleInventory.h"
#include "utils/Resource.h"

namespace Ui
{
class MainWindow;
}

class MainWindow : public QMainWindow
{
    Q_OBJECT

  public:
    MainWindow(QWidget *parent = 0);
    ~MainWindow();

  private:
    Ui::MainWindow *ui;

  private slots:
    void on_launchButton_clicked();
    void on_subjectSessionEdit_textChanged(QString);
    void on_saveDirEdit_textChanged(QString);
    void on_subjectNameEdit_textChanged(QString);
    void on_subjectSessionEdit_editingFinished();
    void on_chooseDirBtn_clicked();
    void on_removeParmfileBtn_clicked();
    void on_addParmfileBtn_clicked();
    void on_paramfilesList_itemDoubleClicked(class QListWidgetItem*);
    void on_actionUp_triggered();
    void on_actionDown_triggered();
    void on_actionTop_triggered();
    void on_actionBottom_triggered();
    void on_actionHide_triggered();
    void on_resetSelectionBtn_clicked();
    void on_actionBCI2000_Help_triggered();
    void on_actionAbout_triggered();
    void on_actionReset_View_triggered();
    void on_actionReset_List_of_Modules_triggered();
    void on_actionCreate_Batch_File_triggered();
    void on_actionQuit_triggered();

    void onTabChanged();
    void onProgramDoubleClick();
    void onProgramSelectionChanged();
    void onProgramUpdate(class QListWidget*);
    void onHelpIconClicked();

    void onExtensionsObtained(QStringList, const QString&, const QString&);
    void onExtensionsFailed(const QString&);
    void onExtensionItemChanged(class QTreeWidgetItem*);
    void onExtensionCollapsedChanged(class QTreeWidgetItem*);

  private:
    void ObtainExtensionsThread(QString, QString);
    void SetupProgramsGroup();
    void SetupSingleTab(QListWidget* pContent, const bci::Resource* pIcon, const QString& name);
    void SetupSelectionGroup();
    void SetupExtensionsGroup();
    void SetupScriptingCommandsGroup();
    void SetupParametersGroup();
    void SetupStatusGroup();
    void SetupGlobalLayout();
    void SetupLists();
    void SetupList(QListWidget*);
    void CreateProgramItem(QListWidget*, const QString&);
    void StyleItem(QListWidgetItem*);

    QStringList ScanForPrograms();
    void DistributePrograms(const QStringList &);
    void ClearProgramEntries(const QString &);
    void IntroduceNewProgram(const QString &);

    QStringList GetExtensions(const QString& program, bool& failed) const;
    QString ExtensionArgs(const QString& category) const;
    void SetExtensionsGroupTitle(const QString& moduleName) const;

    void SetSelectionLabel(class QLabel*, const QString&);
    void ClearSelectionLabel(class QLabel*);
    QString GetSelectedProgram(class QLabel*);

    void ClearExtensionSelections();
    void UpdateExtensionLabels();

    void SaveSettings() const;
    void ReadSettings();

    void SyncToolTip();
    QWidget* CreateHelpIcon(const QString& target) const;

    void WriteCommands(const std::string& separator, std::ostream&) const;

    bool StartExecutable(const std::string& executable, const std::string& args, const std::string& wd);

  private:
    QStringList mParameterFiles, mBrokenModules, mHiddenModules;
    struct Enabler { bool checked = false; QString category; QString extension; };
    std::map<QString, Enabler> mExtensionEnablerState;
    std::map<QString, bool> mExtensionCollapsedState;
    bci::Inventory mInventory;
    QSplitter* mpVerticalSplitter1 = nullptr, *mpVerticalSplitter2 = nullptr, *mpHorizontalSplitter = nullptr;
    QByteArray mDefaultStateVertical1, mDefaultStateVertical2, mDefaultStateHorizontal;
    QLabel* mpSourceSelected, *mpSigProcSelected, *mpAppSelected;
    QLabel* mpSourceExtensions, *mpSigProcExtensions, *mpAppExtensions;
    QTabWidget* mpTabWidget;
    class CustomGroupBox* mpProgramsGroup, *mpSelectionGroup, *mpStatusGroup,
        *mpParametersGroup, *mpExtensionsGroup, *mpScriptingCommandsGroup;
